<form action="/tomatoes/<%=@tomato.id%>" method="POST">
  <br></br>
  <h3>Current Information on the <%=@tomato.variety%> Variety:</h3>

  <p><strong>Variety: </strong> <%=@tomato.variety%>
  <br><strong>Growth Type: </strong><%=@tomato.growth_type%>
  <br><strong>Days: </strong><%=@tomato.days%>
  <br><strong>Details: </strong><%=@tomato.details%></p>
  <br></br>

  <h3>Update the <%=@tomato.variety%> Variety Below:</h3>

  <label><strong>Variety: </strong></label>
  <input type="text" name="variety" id="variety" value="<%=@tomato.variety%>">
  <br></br>

  <label><strong>Growth Type*: </strong></label>
  <input type="radio" name="indeterminate" value="indeterminate"> Indeterminate
  <input type="radio" name="determinate" value="determinate"> Determinate<br>
  <br>

  <label><strong>Days: </strong></label>
  <input type="text" name="days" id="days" value="<%=@tomato.days%>">
  <br></br>

  <p><strong>Details: </strong></p>
  <textarea id="detail" name="details" placeholder="Feel free to include information like the flavor profile, average size, history and more!" rows="5" cols="50">
  </textarea>
  <br></br>
  <input type="submit" name="submit" value="Update Variety">
  <br></br>
  <br></br>
</form>
