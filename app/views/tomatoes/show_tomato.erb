  <%@user.tomatoes.each do |tomato|%>
      <p><strong>Variety: </strong><%=tomato.variety%>
      <br><strong>Growth Type: </strong><%=tomato.growth_type%>
      <br><strong>Days: </strong><%=tomato.days%>
      <br><strong>Details: </strong><%=tomato.details%></p>
