<br></br>
<h2>Welcome, <%=@user.username%>!</h2>
<br>
<h4>Your Account Information;</h4>
<p><strong>Username: </strong><%=@user.username%></p>
<p><strong>Email Address: </strong><%=@user.email%></p>
<br>
<h4>Options:</h4>
<p>Log out <a href="/logout">here<a></p>
<p>Edit your account information <a href="/edit_account">here</a></p>
<p>Access the Plant Library <a href="/tomatoes/all">here</a></p>
<br></br>
<h2>Your Varieties:</h2>
  <%@user.tomatoes.each.with_index(1) do |tomato, index|%>
      <br></br>
      <h3><strong>Variety #<%="#{index}"%>: </strong><%=tomato.variety%></h3>
      <p><strong>Growth Type: </strong><%=tomato.growth_type%>
      <br><strong>Days: </strong><%=tomato.days%></p>
      <strong>Details: </strong><br>
          <%if tomato.details%>
              <%split_details = tomato.details.split(".")%>
              <%split_details.each do |phrase|%>
                  <%=phrase%><br>
              <%end%>
          <%end%>
      <a href="/tomatoes/<%=tomato.id%>/edit">Edit This Variety</a></p>
      <form action="/tomatoes/<%= tomato.id %>/delete" method="post">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Variety">
      </form>
      <br>
  <%end%>
